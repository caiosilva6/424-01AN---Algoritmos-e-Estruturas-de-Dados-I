1.1) 
#include<stdio.h>
int main(){
	int numero;
	printf("Digite um numero inteiro: ");
	scanf("%d", &numero);
	
	printf("O numero digitado eh %d", numero);
		
	return 0;
}

1.2)
#include<stdio.h>
int main(){
	float numero;
	printf("Digite um numero real: ");
	scanf("%f", &numero);
	
	printf("O numero digitado eh %f", numero);
		
	return 0;
}

1.3)
#include<stdio.h>
int main(){
	int n1, n2, n3, soma;
	
	printf("Digite tres numeros inteiros que serao somados: ");
	
	scanf("%d %d %d", &n1, &n2, &n3);
	
	soma = n1+n2+n3;
	
	printf("Os numeros digitados foram %d, %d, %d e a soma deles eh %d", n1, n2, n3, soma);
		
	return 0;
}

1.4)
#include<stdio.h>
int main(){
	float numero, quadrado;
	printf("Digite um numero real: ");
	scanf("%f", &numero);
	
	quadrado = numero * numero;
	
	printf("O numero digitado foi %f e o quadrado dele eh %.2f", numero, quadrado);
		
	return 0;
}

1.5)
#include<stdio.h>
int main(){
	float n1, n2, n3, n4, media;
	
	printf("Digite quatro numeros para tirar a media aritmetica deles: ");
	
	scanf("%f %f %f %f", &n1, &n2, &n3, &n4);
	
	media = (n1+n2+n3+n4)/4;
	
	printf("Os numeros digitados foram %f, %f, %f, %f e a media aritmetica eh %f", n1, n2, n3, n4, media);
		
	return 0;
}

1.6)
#include<stdio.h>
int main(){
	float numero, dolar, conta;
	printf("Digite o valor em reais: ");
	scanf("%f", &numero);
	printf("Digite a cotacao do dolar: ");
	scanf("%f", &dolar);
	
	conta = numero/dolar;
	
	printf("O valor em dolar eh $%.2f", conta);
		
	return 0;
}

1.7)
#include<stdio.h>
int main(){
	int numero, antecessor, sucessor;
	printf("Digite um numero inteiro: ");
	scanf("%d", &numero);
	
	antecessor = numero - 1;
	sucessor = numero + 1;
	
	printf("O numero digitado foi %d, o antecessor deste numero eh %d e o sucessor eh %d", numero, antecessor, sucessor);
		
	return 0;
}

