2.5) 
#include <stdio.h>
int main() {
	int num, conta;
	printf("Digite um numero para sabermos se ele eh par ou impar:\n");
	scanf("%d", &num);
	conta = num%2;
	if (conta==1){
		printf("O numero %d eh impar.", num);
	}
	else {
		printf("O numero %d eh par.", num);
	}	
	return 0;
}

2.6)
#include <stdio.h>
int main (){
	int n1, n2;
	printf("Digite dois numeros para mostrarmos o maior e a diferenca entre eles:\n");
	scanf("%d %d", &n1, &n2);
	if (n1>n2){
		printf("O numero maior eh o %d e a diferenca entre eles eh %d", n1, n1-n2);
	}
	else if (n1==n2){
		printf("Os dois numeros sao iguais");
	}
	else {
		printf("O numero maior eh o %d e a diferenca entre eles eh %d", n2, n2-n1);
	}	
}

2.7)
#include <stdio.h>
int main (){
	float n1, n2;
	printf("Digite dois numeros para mostrarmos o maior:\n");
	scanf("%f %f", &n1, &n2);
	if (n1>n2){
		printf("O numero maior eh o %.2f", n1);
	}
	else if (n1==n2){
		printf("Os dois numeros sao iguais");
	}
	else {
		printf("O numero maior eh o %.2f", n2);
	}	
}

2.8)
#include <stdio.h>
int main (){
	float n1, n2;
	printf("Digite as duas notas:\n");
	scanf("%f %f", &n1, &n2);
	if((n1>=0) && (n1<=10) && (n2>=0) && (n2<=10)){	
		printf("A media das notas %.2f e %.2f eh %.2f", n1, n2, (n1+n2)/2);
	}
	else {
		printf("Nota invalida!");
	}
	return 0;
}

2.9)
#include <stdio.h>
int main (){
	float salario, emprestimo, conta;
	printf("Digite o salario:\nR$");
	scanf("%f", &salario);
	printf("Digite o valor da prestacao:\nR$");
	scanf("%f", &emprestimo);
	if (emprestimo>(salario*0.2)){
		printf("Emprestimo não concedido");
	}
	else {
		printf("Emprestimo concedido");
	}
	return 0;
}
