1.9.3)
#include<stdio.h>
int main(){
	float valor, conta, conta_final;
	printf("Digite o valor: R$");
	scanf("%f", &valor);
	
	conta = valor-(valor*0.1);
	conta_final= conta * 0.05;
	
	printf("O valor com o desconto eh R$%.2f e o valor da sua comissao eh R$%.2f", conta, conta_final);
		
	return 0;
}

1.9.4)
#include<stdio.h>
int main(){
	float valor, conta, conta_final;
	printf("Digite o valor: R$");
	scanf("%f", &valor);
	
	conta = valor/3;
	conta_final = valor*0.05;
	
	printf("O valor da parcela parcelado em 3 vezes eh R$%.2f e o valor da comissao eh R$%.2f", conta, conta_final);
		
	return 0;
}

2.1)
#include<stdio.h>
int main(){
	float n1, n2;
	printf("Digite 2 numeros para saber qual eh o maior:\n");
	scanf("%f %f", &n1, &n2);
	if (n1>n2){
		printf("Voce digitou os numeros %.2f e %.2f, o %.2f e o maior", n1, n2, n1);
	}
	else if (n1<n2){
		printf("Voce digitou os numeros %.2f e %.2f, o %.2f e o maior", n1, n2, n2);
	}
	else {
		printf("Voce digitou duas vezes o numero %.2f portanto sao iguais", n1);
	}
	return 0;
}

2.2)
#include <stdio.h>
#include <math.h>

int main(){
	float n1, conta;
	printf("Digite 1 numero, se for positivo sera tirado a raiz quadrada:\n");
	scanf("%f", &n1);	
	conta = sqrt(n1);
	if (n1>0){
		printf("O numero digitado eh positivo e a raiz quadrada eh %.2f",conta);
	}
	else if (n1<0){
		printf("O numero eh invalido");
	}
	else {
		printf("Você digitiou o numero 0");
	}	
	return 0;
}

2.3)
#include <stdio.h>
#include <math.h>

int main(){
	float n1, raiz, quadrado;
	printf("Digite 1 numero, se for positivo sera tirado a raiz, se for negativo sera elevado ao quadrado:\n");
	scanf("%f", &n1);	
	raiz = sqrt(n1);
	quadrado = n1*n1;
	if (n1>0){
		printf("O numero digitado eh positivo e a raiz quadrada eh %.2f",raiz);
	}
	else if (n1<0){
		printf("O numero eh negativo e o valor ao quadrado eh %.2f",quadrado);
	}
	else {
		printf("Voce digitiou o numero 0");
	}	
	return 0;
}

2.4.1)
#include <stdio.h>
#include <math.h>

int main(){
	float n1, quadrado;
	printf("Digite 1 numero, se for positivo sera elevado ao quadrado:\n");
	scanf("%f", &n1);	
	quadrado = n1*n1;
	if (n1>0){
		printf("O numero digitado eh positivo e o numero ao quadrado eh %.2f",quadrado);
	}
	else {
		printf("Voce nao digitou um numero positivo");
	}	
	return 0;
}

